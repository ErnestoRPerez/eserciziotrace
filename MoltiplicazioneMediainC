#include <stdio.h>


int main() {

    //moltiplicazione

    int n1, n2, prodotto;


    printf("Inserisci il primo valore: ");// Leggo il primo valore
    scanf("%d", &n1);


    printf("Inserisci il secondo valore: "); // Leggo il secondo valore
    scanf("%d", &n2);

    // Calcolo il prodotto
    prodotto = n1 * n2;

    // Visualizzo il risultato
    printf("Il prodotto è: %d\n", prodotto);

    return 0;



